@model Leiturinha.Models.Genero

@{
    ViewData["Title"] = "Criar Gênero";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-form mt-5">
    <h1 class="text-primary fw-bold mb-4 text-center">Novo Gênero</h1>

    <form asp-action="Create" class="form-box">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-4">
            <label asp-for="Nome" class="form-label">Nome do Gênero</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="d-flex gap-3 justify-content-center">
            <input type="submit" value="Salvar" class="btn btn-admin" />
            <a asp-action="Index" class="btn btn-admin">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
