@model Leiturinha.Models.Genero

@{
    ViewData["Title"] = "Excluir Gênero";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-form mt-5">
    <h1 class="text-danger fw-bold mb-4 text-center">Excluir Gênero</h1>
    <h4 class="text-center mb-4">Tem certeza que deseja excluir este gênero?</h4>

    <div class="detail-box">
        <div class="detail-row">
            <span class="detail-label">Nome:</span>
            <span class="detail-value">@Model.Nome</span>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4 d-flex justify-content-center gap-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-admin" />
        <a asp-action="Index" class="btn btn-admin">Voltar</a>
    </form>
</div>
