@model Leiturinha.Models.Genero

@{
    ViewData["Title"] = "Detalhes do Gênero";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-form mt-5">
    <h1 class="text-primary fw-bold mb-4 text-center">Detalhes do Gênero</h1>

    <div class="detail-box">
        <div class="detail-row">
            <span class="detail-label">Nome:</span>
            <span class="detail-value">@Model.Nome</span>
        </div>
    </div>

    <div class="d-flex gap-3 justify-content-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-admin">Editar</a>
        <a asp-action="Index" class="btn btn-admin">Voltar</a>
    </div>
</div>
