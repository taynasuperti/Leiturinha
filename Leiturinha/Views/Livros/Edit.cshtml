@model Leiturinha.Models.Livro

@{
    ViewData["Title"] = "Editar Livro";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-form mt-5">
    <h1 class="text-primary fw-bold mb-4 text-center">Editar Livro</h1>

    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Titulo" class="form-label">Título</label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Autor" class="form-label">Autor</label>
            <input asp-for="Autor" class="form-control" />
            <span asp-validation-for="Autor" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Descricao" class="form-label">Descrição</label>
            <textarea asp-for="Descricao" class="form-control" rows="5" style="resize: none;"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="row mb-4">
            <!-- Card de Upload -->
            <div class="col-sm-12 col-md-6 mt-3 text-center avatar-card">
                <label asp-for="Titulo" class="form-label">Nova Capa</label>
                <div class="avatar-card position-relative rounded-3 border border-2 overflow-hidden bg-avatar"
                     style="height: 300px; border: 2px solid #5D2202 !important; border-radius: 12px;">
                    <img src="~/img/livros/no-cover.jpg" id="PreviewImage" alt="Preview da nova capa"
                         class="w-100 h-100" style="object-fit: cover;" />
                    <input type="file" asp-for="ImagemUpload"
                           class="position-absolute top-0 start-0 w-100 h-100 opacity-0 cursor-pointer input-upload"
                           accept=".jpg, .jpeg, .png, .gif, .jfif"
                           onchange="previewFoto(event)" />
                </div>
                <span asp-validation-for="ImagemUpload" class="text-danger text-sm mt-2 d-block"></span>
            </div>


            <!-- Card de Preview -->
            <div class="col-sm-12 col-md-6 mt-3 text-center avatar-card">
                <label asp-for="Titulo" class="form-label">Capa Atual</label>
                <div class="position-relative rounded-3 overflow-hidden bg-avatar"
                     style="height: 300px; border: 2px solid #5D2202 !important; border-radius: 12px;">
                    @if (!string.IsNullOrEmpty(Model.Capa))
                    {
                        <img src="@Url.Content(Model.Capa)" alt="Capa atual"
                             class="w-100 h-100" style="object-fit: cover;" />
                    }
                    else
                    {
                        <img src="~/img/livros/no-cover.jpg" alt="Sem capa"
                             class="w-100 h-100" style="object-fit: cover;" />
                    }
                </div>
            </div>
        </div>




        <div class="form-group form-check mb-4">
            <input class="form-check-input" asp-for="Destaque" />
            <label class="form-check-label" asp-for="Destaque">Destaque</label>
        </div>

        <div class="form-group mb-3">
            <label asp-for="GeneroId" class="form-label">Gênero</label>
            <select asp-for="GeneroId" class="form-control" asp-items="ViewBag.GeneroId"></select>
            <span asp-validation-for="GeneroId" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="ClassificacaoIndicativaId" class="form-label">Classificação Indicativa</label>
            <select asp-for="ClassificacaoIndicativaId" class="form-control" asp-items="ViewBag.ClassificacaoIndicativaId"></select>
            <span asp-validation-for="ClassificacaoIndicativaId" class="text-danger"></span>
        </div>

        <div class="d-flex gap-3 justify-content-center">
            <input type="submit" value="Salvar" class="btn btn-admin text-input-save" />
            <a asp-action="Index" class="btn btn-admin">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewFoto(event) {
            const input = event.target;
            const preview = document.getElementById("PreviewImage");
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
