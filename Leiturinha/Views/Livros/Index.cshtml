@model IEnumerable<Leiturinha.Models.Livro>

@{
    ViewData["Title"] = "Livros";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-view mt-5">
    <h1 class="text-title fw-bold mb-4 text-center">Catálogo de Livros</h1>

    <div class="text-start mb-3">
        <a asp-action="Create" class="btn btn-admin">Novo Livro</a>
    </div>

    <table class="table table-bordered table-striped admin-table">
        <thead>
            <tr>
                <th class="text-title text-center">Título</th>
                <th class="text-title text-center">Autor</th>
                <th class="text-title text-center">Descrição</th>
                <th class="text-title text-center">Capa</th>
                <th class="text-title text-center">Destaque</th>
                <th class="text-title text-center">Gênero</th>
                <th class="text-title text-center">Classificação</th>
                <th class="text-title text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                    <td class="text-detail text-center fw-bold">@item.Titulo</td>
                    <td class="text-detail text-center fw-bold">@item.Autor</td>
                    <td class="text-detail text-center">@item.Descricao</td>
                    <td class="text-center">
                        <a href="@Url.Content(item.Capa)" target="_blank">
                            <img src="@Url.Content(item.Capa)" alt="Capa do livro" class="img-thumbnail" style="max-height: 250px; width:auto" />
                        </a>
                    </td>
                    <td class="text-detail text-center fw-bold">@item.Destaque</td>
                    <td class="text-detail text-center fw-bold">@item.Genero?.Nome</td>
                    <td class="text-detail text-center fw-bold">@item.ClassificacaoIndicativa?.FaixaEtaria</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-admin btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-admin btn-sm">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-admin btn-sm">Excluir</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
