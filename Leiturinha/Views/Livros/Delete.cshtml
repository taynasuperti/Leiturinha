@model Leiturinha.Models.Livro

@{
    ViewData["Title"] = "Excluir Livro";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-form mt-5">
    <h1 class="text-danger fw-bold mb-4 text-center">Excluir Livro</h1>
    <h4 class="text-center mb-4">Tem certeza que deseja excluir este livro?</h4>


    <div class="row">
        <!-- Informações do Livro -->
        <div class="col-md-7">
            <div class="detail-box">
                <div class="detail-row">
                    <span class="detail-label">Título:</span>
                    <span class="detail-value">@Model.Titulo</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Autor:</span>
                    <span class="detail-value">@Model.Autor</span>
                </div>
                <div class="detail-row flex-column align-items-start">
                    <span class="detail-label mb-2">Descrição:</span>
                    <textarea class="form-control text-detail" readonly rows="6" style="resize: none; width: 100%;">@Model.Descricao</textarea>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Destaque:</span>
                    <span class="detail-value">@Model.Destaque</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Gênero:</span>
                    <span class="detail-value">@Model.Genero?.Nome</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Classificação:</span>
                    <span class="detail-value">@Model.ClassificacaoIndicativa?.FaixaEtaria</span>
                </div>
            </div>
        </div>

        <!-- Card da Capa -->
        <div class="col-md-5 text-center mb-4">
            <label class="form-label fw-bold">Capa</label>
            <div class="position-relative rounded-3 overflow-hidden bg-avatar"
                 style="height: 300px; border: 2px solid #5D2202 !important; border-radius: 12px;">
                @if (!string.IsNullOrEmpty(Model.Capa))
                {
                    <img src="@Url.Content(Model.Capa)" alt="Capa atual"
                         class="w-100 h-100" style="object-fit: cover;" />
                }
                else
                {
                    <img src="~/img/livros/no-cover.png" alt="Sem capa"
                         class="w-100 h-100" style="object-fit: cover;" />
                }
            </div>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-center gap-3">
            <input type="submit" value="Confirmar Exclusão" class="btn btn-admin" />
            <a asp-action="Index" class="btn btn-admin">Cancelar</a>
        </div>
    </form>
</div>
