@using Leiturinha.Models
@model Avaliacao

@{
    ViewData["Title"] = "Excluir Avaliação";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-form mt-5">
    <h1 class="text-danger fw-bold mb-4 text-center">Excluir Avaliação</h1>
    <h4 class="text-center mb-4">Tem certeza que deseja excluir esta avaliação?</h4>

    <div class="detail-box">
        <div class="detail-row">
            <span class="detail-label">Livro:</span>
            <span class="detail-value">@Model.Livro?.Autor</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Usuário:</span>
            <span class="detail-value">@Model.Usuario?.UserName</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Nota:</span>
            <span class="detail-value">@Model.Nota</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Data da Avaliação:</span>
            <span class="detail-value">@Model.DataAvaliacao.ToString("dd/MM/yyyy HH:mm")</span>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4 d-flex justify-content-center gap-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-admin" />
        <a asp-action="Index" class="btn btn-admin">Voltar</a>
    </form>
</div>
