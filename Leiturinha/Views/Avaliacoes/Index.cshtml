@using Leiturinha.ViewModels
@model IEnumerable<Avaliacao>

@{
    ViewData["Title"] = "Avaliações";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-view">
    <h1 class="text-primary fw-bold mb-4">Avaliações</h1>

    <p>
        <a asp-action="Create" class="btn btn-admin mb-3">Nova Avaliação</a>
    </p>

    <table class="table table-bordered table-striped admin-table">
        <thead class="table-header">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Livro)</th>
                <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                <th>@Html.DisplayNameFor(model => model.Nota)</th>
                <th>@Html.DisplayNameFor(model => model.DataAvaliacao)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Livro.Autor)</td>
                    <td>@Html.DisplayFor(modelItem => item.Usuario.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nota)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataAvaliacao)</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-admin btn-sm">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-admin btn-sm">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-admin btn-sm">Excluir</a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
