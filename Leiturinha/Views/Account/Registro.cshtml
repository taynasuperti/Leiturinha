@model Leiturinha.ViewModels.RegistroVM
@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="container">
    <div class="row justify-content-center my-3">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header text-center">
                    <img class="img-logo img-fluid mt-4" src="~/img/header/logo.png" alt="Leiturinha" />
                    <h3 class="fw-bold my-3">Cadastre-se</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Registro" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" hidden></div>
                        <div class="row">
                            <div class="col-12 col-md-7">
                                <div class="form-floating mb-3">
                                    <input class="form-control" asp-for="Nome" />
                                    <label asp-for="Nome"></label>
                                    <span asp-validation-for="Nome" class="text-danger text-sm"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" asp-for="Email" />
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger text-sm"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" asp-for="DataNascimento" />
                                    <label asp-for="DataNascimento"></label>
                                    <span asp-validation-for="DataNascimento" class="text-danger text-sm"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" asp-for="Senha" />
                                    <label asp-for="Senha"></label>
                                    <span asp-validation-for="Senha" class="text-danger text-sm"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" asp-for="ConfirmacaoSenha" />
                                    <label asp-for="ConfirmacaoSenha"></label>
                                    <span asp-validation-for="ConfirmacaoSenha" class="text-danger text-sm"></span>
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-5 mt-3 text-center avatar-card">
                                <div class="avatar-card position-relative rounded-3 border border-2 overflow-hidden bg-avatar" style="height: 250px; background-color: #FFFDF5; border-color: #D9A679;">
                                    <img src="~/img/usuarios/no-photo.jpg" id="PreviewImage" alt="Foto de Avatar"
                                         class="w-100 h-100" style="object-fit: cover;" />
                                    <input type="file" asp-for="Foto" id="Foto"
                                           class="position-absolute top-0 start-0 w-100 h-100 opacity-0 cursor-pointer"
                                           accept=".jpg, .jpeg, .png, .gif, .jfif"
                                           onchange="previewFoto(event)" />
                                </div>
                                <span asp-validation-for="Foto" class="text-danger text-sm mt-2 d-block"></span>
                            </div>
                        </div>

                        <div class="d-flex flex-column align-items-center justify-content-center mt-4 mb-0">
                            <input type="submit" class="btn btn-primary w-100 mb-3" value="Criar Conta">
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">Já possui uma conta? <a asp-action="Login" class="fw-bold">Faça Login</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml"></partial>
    <script type="text/javascript">
        function previewFoto(event) {
            const input = event.target;
            const preview = document.getElementById("PreviewImage");

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        let mensagemErro = '';
        $(".validation-summary-errors ul li").each(function () {
            mensagemErro += $(this).text() + '<br />';
        });
        if (mensagemErro != '')
            Swal.fire(
                'Acesso Negado',
                mensagemErro,
                'error'
            );

        @if (TempData["RegistroSuccess"] != null)
        {
                <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Sucesso',
                        text: '@TempData["RegistroSuccess"]'
                    });
                </text>
        }

               @if (TempData["RegistroError"] != null)
        {
                <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Erro no cadastro',
                        text: '@TempData["RegistroError"]'
                    });
                </text>
        }
    </script>
}
