@model Leiturinha.Models.Comentario

@{
    ViewData["Title"] = "Editar Comentário";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-form mt-5">
    <h1 class="text-primary fw-bold mb-4 text-center">Editar Comentário</h1>

    <form asp-action="Edit" class="form-box">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="LivroId" class="form-label">Livro</label>
            <select asp-for="LivroId" class="form-control" asp-items="ViewBag.LivroId"></select>
            <span asp-validation-for="LivroId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="UsuarioId" class="form-label">Usuário</label>
            <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
            <span asp-validation-for="UsuarioId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DataComentario" class="form-label">Data do Comentário</label>
            <input asp-for="DataComentario" class="form-control" type="datetime-local"
                   value="@Model.DataComentario.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="DataComentario" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="TextoComentario" class="form-label">Texto do Comentário</label>
               <textarea asp-for="TextoComentario" class="form-control" rows="6" style="resize: none;"></textarea>
            <span asp-validation-for="TextoComentario" class="text-danger"></span>
        </div>

        <div class="d-flex gap-3 justify-content-center">
            <input type="submit" value="Salvar" class="btn btn-admin text-input-save" />
            <a asp-action="Index" class="btn btn-admin">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
