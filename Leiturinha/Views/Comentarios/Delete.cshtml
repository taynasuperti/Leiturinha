@model Leiturinha.Models.Comentario

@{
    ViewData["Title"] = "Excluir Comentário";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-form mt-5">
    <h1 class="text-danger fw-bold mb-4 text-center">Excluir Comentário</h1>
    <h4 class="text-center mb-4">Tem certeza que deseja excluir este comentário?</h4>

    <div class="detail-box">
        <div class="detail-row">
            <span class="detail-label">Livro:</span>
            <span class="detail-value">@Model.Livro?.Autor</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Usuário:</span>
            <span class="detail-value">@Model.Usuario?.UserName</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Data do Comentário:</span>
            <span class="detail-value">@Model.DataComentario.ToString("dd/MM/yyyy HH:mm")</span>
        </div>
        <div class="detail-row flex-column align-items-start">
            <span class="detail-label mb-2">Texto:</span>
            <textarea class="form-control text-detail" readonly rows="6" style="resize: none; width: 100%;">@Model.TextoComentario</textarea>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4 d-flex justify-content-center gap-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-admin text-input-save" />
        <a asp-action="Index" class="btn btn-admin">Voltar</a>
    </form>
</div>
