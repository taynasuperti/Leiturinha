@model Leiturinha.ViewModels.LivroVM
@{
    ViewData["Title"] = "Detalhes";
}

<!-- Livro section -->
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6">
                @{
                    var imagens = Model.Livro.Imagens?.ToList() ?? new List<Leiturinha.Models.ImagemLivro>();

                    // Adiciona a capa como primeira imagem, se estiver separada
                    if (!string.IsNullOrEmpty(Model.Livro.Capa))
                    {
                        imagens.Insert(0, new Leiturinha.Models.ImagemLivro { CaminhoImagem = Model.Livro.Capa });
                    }
                }

                @if (!imagens.Any())
                {
                    <img class="img-fluid mb-3 img-livro" src="@Url.Content("~/img/produto-sem-imagem.jpg")" alt="@Model.Livro.Titulo" />
                }
                else
                {
                    <div class="card-livro carousel-wrapper">
                        <div id="carouselLivro" class="carousel slide mb-3" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                @for (int i = 0; i < imagens.Count; i++)
                                {
                                    <button type="button" data-bs-target="#carouselLivro" data-bs-slide-to="@i"
                                            class="@(i == 0 ? "active" : "")"
                                            aria-current="@(i == 0 ? "true" : "false")"
                                            aria-label="Slide @(i + 1)">
                                    </button>
                                }
                            </div>
                            <div class="carousel-inner">
                                @for (int i = 0; i < imagens.Count; i++)
                                {
                                    var imagem = imagens[i];
                                    var caminho = !string.IsNullOrEmpty(imagem?.CaminhoImagem)
                                    ? (imagem.CaminhoImagem.StartsWith("~") ? imagem.CaminhoImagem : "~" + imagem.CaminhoImagem)
                                    : "~/img/livro-sem-imagem.jpg";

                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img class="d-block w-100 img-livro" src="@Url.Content(caminho)" alt="@Model.Livro.Titulo" />
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev custom-arrow" type="button" data-bs-target="#carouselLivro" data-bs-slide="prev">
                                <span aria-hidden="true">&lt;</span>
                                <span class="visually-hidden">Anterior</span>
                            </button>
                            <button class="carousel-control-next custom-arrow" type="button" data-bs-target="#carouselLivro" data-bs-slide="next">
                                <span aria-hidden="true">&gt;</span>
                                <span class="visually-hidden">Próximo</span>
                            </button>

                        </div>
                    </div>
                }
            </div>

            <div class="col-md-6">
                <div class="small mb-1">Gênero: @Model.Livro.Genero.Nome</div>
                <h1 class="display-5 fw-bolder">@Model.Livro.Titulo</h1>
                <div class="fs-5 mb-3">
                    <span class="badge bg-secondary me-2">Classificação: @Model.Livro.ClassificacaoIndicativa.FaixaEtaria</span>
                    <span class="badge bg-warning text-dark">Média: @Model.MediaEstrelas.ToString("N1") ⭐</span>
                </div>
                <p class="lead mb-4">@Model.Livro.Descricao</p>
            </div>
        </div>
    </div>
</section>

<!-- Comentários -->
<section class="py-5 bg-white">
    <div class="container px-4 px-lg-5">
        <div class="text-center pb-4">
            <p class="section-title px-5">
                <span class="px-2">Comentários</span>
            </p>
            <h2 class="mb-4">O que você achou deste livro?</h2>
        </div>

        <!-- Mensagens de feedback -->
        @if (TempData["Sucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Sucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Erro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Erro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Formulário de comentário -->
        <div class="row justify-content-center mb-5">
            <div class="col-md-8">
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Comentarios" asp-action="Criar" method="post">
                        <input type="hidden" name="LivroId" value="@Model.Livro.Id" />
                        <div class="form-group mb-3">
                            <textarea name="Texto" class="form-control" rows="4" placeholder="Escreva seu comentário aqui..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary px-4">Enviar comentário</button>
                    </form>
                }
                else
                {
                    <p class="text-muted text-center">Você precisa estar logado para comentar.</p>
                }
            </div>
        </div>

        <!-- Comentários existentes -->
        <div class="row">
            @if (Model.Comentarios != null && Model.Comentarios.Any())
            {
                foreach (var comentario in Model.Comentarios)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body bg-light">
                                <h5 class="card-title">@comentario.Usuario?.UserName</h5>
                                <p class="card-text">@comentario.TextoComentario</p>
                                <small class="text-muted">@comentario.DataComentario.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center">
                    <p class="text-muted">Nenhum comentário ainda. Seja o primeiro a comentar!</p>
                </div>
            }
        </div>
    </div>
</section>

<!-- Livros semelhantes -->
<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="text-center pb-4">
            <p class="section-title px-5">
                <span class="px-2">Semelhantes</span>
            </p>
            <h1 class="mb-4">Você também pode gostar de</h1>
        </div>
        <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-lg-3 justify-content-center">
            @if (Model.Semelhantes != null && Model.Semelhantes.Any())
            {
                foreach (var livro in Model.Semelhantes)
                {
                    <div class="col mb-5">
                        <div class="card border-0 bg-white shadow-sm h-100">
                            @if (livro.Imagens != null && livro.Imagens.Any())
                            {
                                var caminho = livro.Imagens.First().CaminhoImagem.StartsWith("~") ? livro.Imagens.First().CaminhoImagem : "~" + livro.Imagens.First().CaminhoImagem;
                                <img class="card-img-top" src="@Url.Content(caminho)" alt="@livro.Titulo" />
                            }
                            else
                            {
                                <img class="card-img-top" src="@Url.Content("~/img/livro-sem-imagem.jpg")" alt="@livro.Titulo" />
                            }

                            <div class="card-body text-center">
                                <h4 class="card-title">@livro.Titulo</h4>
                            </div>
                            <div class="card-footer bg-transparent py-3 px-4">
                                <div class="row">
                                    <div class="col-6 text-right"><strong>Gênero</strong></div>
                                    <div class="col-6">@livro.Genero?.Nome</div>
                                </div>
                                <div class="row">
                                    <div class="col-6 text-right"><strong>Classificação</strong></div>
                                    <div class="col-6">@livro.ClassificacaoIndicativa?.FaixaEtaria</div>
                                </div>
                            </div>
                            <a asp-controller="Home" asp-action="Livro" asp-route-id="@livro.Id" class="btn btn-primary px-4 mx-auto mb-4">Ver mais</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <h3 class="text-center">Nenhum livro semelhante encontrado.</h3>
            }
        </div>
    </div>
</section>
