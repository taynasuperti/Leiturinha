<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Leiturinha - @ViewData["Title"]</title>

    <link rel="icon" href="~/img/logo.png" type="image/png" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-4 bg-dark" asp-page="/Admin/Index">
            <img src="~/img/logo.png" alt="Leiturinha" class="me-2" width="40" />Leiturinha
        </a>

        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button"
                data-bs-toggle="collapse" data-bs-target="#sidebarMenu"
                aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="d-flex align-items-center ms-auto px-3">
            @* mostra nome do usuário autenticado (se houver) e mantém partial de login *@
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <span class="text-light me-3">@User.Identity.Name</span>
            }
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="sidebar-sticky pt-4">
                    <ul class="nav flex-column pe-2">
                        <li class="nav-item py-1 @(ViewData["Title"] as string == "Área Administrativa" ? "bg-dark rounded-end-5" : "")">
                            <a class="nav-link fs-6 @(ViewData["Title"] as string == "Área Administrativa" ? "text-white" : "")" asp-page="/Admin/Index">
                                <i class="bi bi-house-fill fs-5"></i> Home
                            </a>
                        </li>

                        <li class="nav-item py-1 @(ViewData["Title"] as string == "Receitas" ? "bg-dark rounded-end-5" : "")">
                            <a class="nav-link fs-6 @(ViewData["Title"] as string == "Receitas" ? "text-white" : "")" asp-page="/Admin/Receitas/Index">
                                <i class="bi bi-file-earmark-medical fs-5"></i> Receitas
                            </a>
                        </li>

                        <li class="nav-item py-1 @(ViewData["Title"] as string == "Categorias" ? "bg-dark rounded-end-5" : "")">
                            <a class="nav-link fs-6 @(ViewData["Title"] as string == "Categorias" ? "text-white" : "")" asp-page="/Admin/Categorias/Index">
                                <i class="bi bi-tags fs-5"></i> Categorias
                            </a>
                        </li>

                        <li class="nav-item py-1 @(ViewData["Title"] as string == "Livros" ? "bg-dark rounded-end-5" : "")">
                            <a class="nav-link fs-6 @(ViewData["Title"] as string == "Livros" ? "text-white" : "")" asp-page="/Admin/Livros/Index">
                                <i class="bi bi-book fs-5"></i> Livros
                            </a>
                        </li>

                        <li class="nav-item py-1 @(ViewData["Title"] as string == "Imagens" ? "bg-dark rounded-end-5" : "")">
                            <a class="nav-link fs-6 @(ViewData["Title"] as string == "Imagens" ? "text-white" : "")" asp-page="/Admin/Imagens/Index">
                                <i class="bi bi-image fs-5"></i> Imagens
                            </a>
                        </li>

                        <li class="nav-item py-1 @(ViewData["Title"] as string == "Usuários" ? "bg-dark rounded-end-5" : "")">
                            <a class="nav-link fs-6 @(ViewData["Title"] as string == "Usuários" ? "text-white" : "")" asp-page="/Admin/Usuarios/Index">
                                <i class="bi bi-people fs-5"></i> Usuários
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pt-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>