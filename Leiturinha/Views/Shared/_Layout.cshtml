<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Leiturinha</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Leiturinha.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <!-- Navbar Start -->
        <div class="bg-light position-relative shadow">
            <nav class="navbar-color navbar navbar-expand-lg navbar-light py-3 py-lg-0 px-0 px-lg-5">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand font-weight-bold text-secondary" style="font-size: 50px">
                    <i class="flaticon-043-teddy-bear"></i>
                    <img class="img-logo" src="~/img/header/logo.png" alt="Leiturinha" />
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav font-weight-bold mx-auto py-0">
                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Home</a>
                        <a href="/Home/Index#destaques" class="nav-item nav-link @(ViewData["Title"]?.ToString() == "Destaques" ? "active" : "")">Destaques</a>
                        <a asp-controller="Home" asp-action="Livros" class="nav-item nav-link">Livros</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Gêneros</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a asp-controller="Generos" asp-action="Genero" asp-route-nome="Aventura" class="dropdown-item">Aventura</a>
                                <a asp-controller="Generos" asp-action="Genero" asp-route-nome="Contos" class="dropdown-item">Contos</a>
                                <a asp-controller="Generos" asp-action="Genero" asp-route-nome="Fábulas" class="dropdown-item">Fábulas</a>
                                <a asp-controller="Generos" asp-action="Genero" asp-route-nome="Fantasia" class="dropdown-item">Fantasia</a>
                                <a asp-controller="Generos" asp-action="Genero" asp-route-nome="Poesia infantil" class="dropdown-item">Poesia infantil</a>
                            </div>
                        </div>

                    </div>
                    <a asp-controller="Account" asp-action="Registro" class="btn-cadastro px-4">Cadastre-se</a>
                </div>
            </nav>
        </div>
        <!-- Navbar End -->
    </header>



    <main role="main">
        @RenderBody()
    </main>



    <!-- Footer Start -->
    <div class="container-fluid bg-secondary text-white mt-5 py-5 px-sm-3 px-md-5"> 
            <p class="m-0 text-center text-white"> 
                &copy;
                <a class="text-primary font-weight-bold" href="#">Leiturinha</a>
            . </p> 
    </div>

    <!-- Footer End -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>