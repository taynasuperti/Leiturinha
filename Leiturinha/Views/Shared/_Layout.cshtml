<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Leiturinha</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/scss/style.scss" />
    <link rel="stylesheet" href="~/scss/bootstrap" />
    <link rel="stylesheet" href="~/Leiturinha.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navbar Start -->
        <div class="container-fluid bg-light position-relative shadow">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0 px-lg-5">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand font-weight-bold text-secondary" style="font-size: 50px">
                    <i class="flaticon-043-teddy-bear"></i>
                    <span class="text-primary">Leiturinha</span>
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav font-weight-bold mx-auto py-0">
                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Home</a>
                        <a asp-controller="Home" asp-action="Details" class="nav-item nav-link">Destaques</a>
                        <a asp-controller="Livro" asp-action="Livros" class="nav-item nav-link">Livros</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Mais</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a asp-controller="Blog" asp-action="Index" class="dropdown-item">Blog</a>
                                <a asp-controller="Blog" asp-action="Detalhe" class="dropdown-item">Detalhes</a>
                            </div>
                        </div>
                        <a asp-controller="Contato" asp-action="Index" class="nav-item nav-link">Contato</a>
                    </div>
                    <a asp-controller="Turmas" asp-action="Inscricao" class="btn btn-primary px-4">Inscreva-se</a>
                </div>
            </nav>
        </div>
        <!-- Navbar End -->

    </header>

    <main role="main">
        @RenderBody()
    </main>



    <!-- Footer Start -->
    <div class="container-fluid bg-secondary text-white mt-5 py-5 px-sm-3 px-md-5"> 
            <p class="m-0 text-center text-white"> 
                &copy;
                <a class="text-primary font-weight-bold" href="#">Leiturinha</a>
            . </p> 
    </div>

    <!-- Footer End -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>